{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib", // Output compiled files to functions/lib/
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "lib": ["es2020"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"], // Include all .ts files in src/ and subdirectories
  "exclude": ["node_modules", "lib"] // Exclude these directories
}